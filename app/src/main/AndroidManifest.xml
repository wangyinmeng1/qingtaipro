<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.findpasswordui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".findPasswordActivity">
            <intent-filter>
                <action android:name="com.example.findpasswordui.ACTION_START"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="com.example.findpasswordui.MY_CATEGORY"/>
            </intent-filter>
        </activity>
        <activity android:name=".Open">
            <intent-filter>
                <action android:name="com.example.findpasswordui.ACTION_START"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="com.example.findpasswordui.MY_CATEGORY"/>
            </intent-filter>
        </activity>

        <activity android:name=".VerifyCodeActivity">
            <intent-filter>
                <action android:name="com.example.findpasswordui.ACTION_START"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="com.example.findpasswordui.MY_CATEGORY"/>
            </intent-filter>
        </activity>

        <activity android:name=".NewPasswordActivity">
            <intent-filter>
                <action android:name="com.example.findpasswordui.ACTION_START"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="com.example.findpasswordui.MY_CATEGORY"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
